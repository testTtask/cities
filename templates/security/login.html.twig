{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="login-page">
        <div class="form">
            <form class="login-form" method="post" action="{{ path('login') }}">
                {% if error %}
                    <p class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
                <input type="text" placeholder="username" name="_username" required="required">
                <input type="password" placeholder="password" name="_password" required="required">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button>login</button>
            </form>
        </div>
    </div>
{% endblock %}
